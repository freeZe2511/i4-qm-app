<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="I4_QM_app.Views.OrderDetailPage"
             xmlns:model="clr-namespace:I4_QM_app.Models"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Id:" FontSize="Medium" />
        <Label Text="{Binding Id}" FontSize="Small"/>
        <Label Text="UserId:" FontSize="Medium" />
        <Label Text="{Binding UserId}" FontSize="Small"/>
        <Label Text="{Binding Amount}" FontSize="Small"/>
        <Label Text="{Binding Status}" FontSize="Small"/>
        <Label Text="{Binding Created}" FontSize="Small"/>
        <Label Text="{Binding Due}" FontSize="Small"/>
        
        <!--ListView Additives-->
        <CollectionView x:Name="AdditivesListView"
                ItemsSource="{Binding Additives}"
                SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <!--<Grid RowSpacing="100">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        --><!-- This column will be as wide as the third column --><!--
                        <Button Grid.Column="0" Text=""/>
                        --><!-- This column will be twice as wide as the rest --><!--
                        <Button Grid.Column="1" Text=""/>
                        --><!-- This column will be as wide as the first column --><!--
                        <Button Grid.Column="2" Text=""/>
                        <Button Grid.Column="3" Text=""/>
                    </Grid>-->
                    <!--<BoxView HeightRequest="1" Color="LightGray" Margin ="0, 0, 0, 0"/>-->
                    <StackLayout Padding="10" x:DataType="model:Additive">
                        <Label Text="{Binding Name}" 
                            LineBreakMode="NoWrap" 
                            Style="{DynamicResource ListItemTextStyle}" 
                            FontSize="16"
                            FontAttributes="Bold"/>
                       
                        <BoxView HeightRequest="1" Color="LightGray" Margin ="0, 0, 0, 0"/>
                        <StackLayout.GestureRecognizers>
                            <!--<TapGestureRecognizer 
                                
                            </TapGestureRecognizer>-->
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--Submit-->
        <Button VerticalOptions="Center" Text="Done!" Command="{Binding DoneCommand}" BackgroundColor="{StaticResource Primary}"/>


    </StackLayout>
    
</ContentPage>